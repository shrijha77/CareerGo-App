<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"

    android:scrollbarStyle="insideInset"
    android:fillViewport="true"
    tools:context="com.example.shrijhajhra.careergo.test_result"
    android:id="@+id/scrollview"
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"
        android:textSize="21sp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:text="Your Intrest Among Categories"
        android:paddingLeft="10dp"
        android:focusable="true"
        />
    <View
        android:id="@+id/view_text1"
        android:layout_below="@+id/text1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"/>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_below="@+id/view_text1"
        android:layout_width="match_parent"
        android:layout_height="350sp"/>
    <View
        android:id="@+id/view_1"
        android:layout_below="@+id/barchart"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"
        android:textSize="21sp"
        android:layout_below="@+id/barchart"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:text="Your Intrests Based On Test "
        android:paddingLeft="10dp"
        />
    <View
        android:id="@+id/view_3"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <ListView
        android:id="@+id/list_test_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1">

    </ListView>
    <View
        android:id="@+id/view_2"
        android:layout_below="@+id/list_test_result"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"
        android:textSize="21sp"
        android:layout_below="@+id/list_test_result"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:text="Recommended Career Categories "
        android:id="@+id/textView2"

        android:paddingLeft="10dp"/>
    <View
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/cat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:text="category 1"
        android:padding="4dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        />

    <TextView
        android:id="@+id/cat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:layout_marginLeft="17dp"
        android:layout_below="@+id/cat1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="category 2"
        android:padding="4dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"/>
</RelativeLayout>
</ScrollView>
