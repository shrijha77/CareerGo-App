<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.example.shrijhajhra.careergo.Career_path">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Career Name"
            android:id="@+id/text1"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Career Overview"
            android:id="@+id/overview"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/dark"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view1"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>
        <TextView
            android:text="How Do You Get There?"
            android:id="@+id/text2"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="stage1 - "
            android:id="@+id/stage1"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/dark"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="stage2 - "
            android:id="@+id/stage2"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/dark"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="stage3 - "
            android:id="@+id/stage3"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/dark"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="stage4 - "
            android:id="@+id/stage4"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/dark"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view2"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>
        <TextView
            android:text="Exams"
            android:id="@+id/text3"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Exams name"
            android:id="@+id/exam"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/view3"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>
        <TextView
            android:text="Top Institutes"
            android:id="@+id/text4"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/list_institute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1">


        </ListView>
        <View
            android:id="@+id/view4"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>
        <TextView
            android:text="Scope In This Field"
            android:id="@+id/text5"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Scope details"
            android:id="@+id/scope"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/dark"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view5"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>
        <TextView
            android:text="Competetion In This Field"
            android:id="@+id/text6"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Scope details"
            android:id="@+id/compet"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:textColor="@color/dark"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>




</ScrollView>
