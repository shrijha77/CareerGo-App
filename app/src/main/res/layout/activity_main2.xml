<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shrijhajhra.careergo.MainActivity2">
    <include layout="@layout/bottom_nav_bar"/>


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:title="Career Go"
        app:titleTextColor="@color/white"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
<LinearLayout
    android:layout_below="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:text="Career Menu"
        android:id="@+id/text1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="11dp"


        android:layout_centerInParent="false"
        android:textColor="@color/dark"
        android:textSize="20sp"
        android:padding="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp">
        <LinearLayout
            android:id="@+id/innerLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/qualification"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/qualification_f"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Qualification Based "
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/qualification"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/categ_new"
                    android:id="@+id/category"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Career Category"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/dark"
                    android:layout_below="@+id/category"
                    android:layout_marginTop="5dp"
                    android:singleLine="false"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/career_f"
                    android:id="@+id/career"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/dark"
                    android:layout_height="wrap_content"
                    android:text="Careers"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/career"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/test"
                    android:id="@+id/test1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Test Based "
                    android:textColor="@color/dark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/test1"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/innerLay"
            android:background="@color/dark"/>

        <LinearLayout
            android:id="@+id/innerLay1"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/artc"
                    android:id="@+id/article"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="News Articles"
                    android:textColor="@color/dark"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/article"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/exams"
                    android:id="@+id/exam"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exams"
                    android:textColor="@color/dark"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/exam"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/university"
                    android:id="@+id/college"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark"
                    android:text="Top Colleges"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/college"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/more" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark"
                    android:text="More"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/notification"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


    <View
        android:id="@+id/view1"

        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Recommended"
            android:id="@+id/text2"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"


            android:layout_centerInParent="false"
            android:textColor="@color/dark"
            android:textSize="20sp"
            android:padding="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/viewx"
            android:layout_below="@id/text2"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_below="@+id/viewx"

            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="false"
            />
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_below="@+id/pager"
            android:layout_height="48dp"
            android:layout_marginTop="-50dp"
            android:layout_alignParentBottom="false"/>
    </RelativeLayout>
    <View
        android:id="@+id/view2"

        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/gray"/>

    <GridLayout
        android:id="@+id/maingrid"
        android:layout_marginTop="250dp"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="160sp"
            android:layout_height="160sp"


            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_gravity="clip_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/qual"
                    android:src="@drawable/qualifi"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:layout_height="70dp" />
                <TextView
                    android:text="check by Qualification"
                    android:layout_below="@+id/qual"
                    android:layout_alignLeft="@+id/qual"
                    android:layout_alignRight="@+id/qual"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_centerInParent="false"
                    android:textColor="@color/dark"
                    android:textSize="15sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="160sp"
            android:layout_height="160sp"

            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_gravity="clip_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/not"
                        android:layout_width="100dp"

                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_marginStart="17dp"
                        android:src="@drawable/notification1" />
                <TextView
                    android:text="Notification"
                    android:layout_below="@+id/not"
                    android:layout_alignLeft="@+id/not"
                    android:layout_alignRight="@+id/not"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_centerInParent="false"
                    android:textColor="@color/dark"
                    android:textSize="15sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="160sp"
            android:layout_height="160sp"

            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_gravity="clip_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/cat"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/categs" />
                <TextView
                    android:text="Category"
                    android:layout_below="@+id/cat"
                    android:layout_alignLeft="@+id/cat"
                    android:layout_alignRight="@+id/cat"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/dark"
                    android:textSize="15sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="160sp"
            android:layout_height="160sp"

            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_gravity="clip_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/car"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="13dp"
                        android:layout_marginStart="13dp"
                        android:src="@drawable/careers" />
                <TextView
                    android:text="Careers"
                    android:layout_below="@+id/car"
                    android:layout_alignLeft="@+id/car"
                    android:layout_alignRight="@+id/car"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/dark"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="160sp"
            android:layout_height="160sp"

            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_gravity="clip_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/test"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:src="@drawable/test" />
                <TextView
                    android:text="Test based"
                    android:layout_below="@+id/test"
                    android:layout_alignLeft="@+id/test"
                    android:layout_alignRight="@+id/test"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_centerInParent="false"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="160sp"
            android:layout_height="160sp"

            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_gravity="clip_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/art"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="22dp"
                        android:layout_marginStart="22dp"
                        android:src="@drawable/articles" />
                <TextView
                    android:text="Recent articles"
                    android:layout_below="@+id/art"
                    android:layout_alignLeft="@+id/art"
                    android:layout_alignRight="@+id/art"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_centerInParent="false"
                    android:textColor="@color/dark"
                    android:textSize="15sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>





    </GridLayout>

</LinearLayout>

</RelativeLayout>
